            "getRoles": {
                "action": "roles",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "getApproveIdeas": {
                "action": "approvals",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "getPrivateIdeas": {
                "action": "ideas",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "getInsights": {
                "action": "insights",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "changeStatus": {
                "action": "approvals/update",
                "method": "POST",
                "authorization": true,
                "version": true
            }
        }
    },
    "swalMessages": {
        "ideaSaved": {
            "anonymousPublic": {
                "title": "Shared anonymously!",
                "message": "Your voice is now part of the public conversation. Thanks for contributing!"
            },
            "anonymousPrivate": {
                "title": "Privately received!",
                "message": "Your anonymous submission is secure. We'll review it thoughtfully and consider it internally."
            },
            "byNamePublic": {
                "title": "Posted and live!",
                "message": "Your contribution is now visible to the community. Thanks for sharing your perspective!"
            },
            "byNamePrivate": {
                "title": "Securely saved!",
                "message": "Your private submission is safe with us. We'll review it carefully and take it forward."
            }
        }
    }
