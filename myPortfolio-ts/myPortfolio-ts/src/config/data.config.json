{
    "appName": "FutureBox",
    "version": "1.0",
    "baseUrls": {
        "local": "http://localhost:5000/",
        "staging": "http://localhost:5000/",
        "development": "http://localhost:5000/",
        "production": "http://localhost:5000/"
    },
    "domains": {
        "users": "users/",
        "dashboard": "dashboard/",
        "login": "login/",
        "admin": "admin/"
    },
    "auth": {
        "base": "auth/"
    },
    "commands": {
        "test": {
            "api": {
                "action": "api",
                "method": "GET",
                "authorization": false
            }
        },
        "users": {
            "login": {
                "action": "login",
                "method": "POST",
                "authorization": false,
                "version": true
            },
            "verify": {
                "action": "verify",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "logout": {
                "action": "logout",
                "method": "POST",
                "authorization": true,
                "version": true
            }
        },
        "notifications": {
            "getNotifications": {
                "action": "notifications",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "unread-count": {
                "action": "unread-count",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "mark-read": {
                "action": "mark-read",
                "method": "POST",
                "authorization": true,
                "version": true
            },
            "mark-all-read": {
                "action": "mark-all-read",
                "method": "POST",
                "authorization": true,
                "version": true
            }
        },
        "dashboard": {
            "insights": {
                "action": "insights",
                "method": "GET",
                "authorization": true,
                "version": true
            }
        },
        "admin": {
            "getCategory": {
                "action": "categories",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "createCategory": {
                "action": "categories",
                "method": "POST",
                "authorization": true,
                "version": true
            },
            "updateCategory": {
                "action": "categories",
                "method": "PUT",
                "authorization": true,
                "version": true
            },
            "deleteCategory": {
                "action": "categories",
                "method": "DELETE",
                "authorization": true,
                "version": true
            },
            "getUsers": {
                "action": "users",
                "method": "GET",
                "authorization": true,
                "version": true
            },
            "editUser": {
                "action": "user/edit",
                "method": "PUT",
                "authorization": true,
                "version": true
